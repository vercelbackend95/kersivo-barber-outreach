generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BookingStatus {
  PENDING_CONFIRMATION
  CONFIRMED
  CANCELLED_BY_CLIENT
  CANCELLED_BY_ADMIN
  CANCELLED_BY_SHOP
  RESCHEDULED
  EXPIRED
}

enum PaymentStatus {
  UNPAID
  PAID
}

enum OrderStatus {
  PAID
  COLLECTED
}

model ShopSettings {
  id                          String   @id @default(cuid())
  name                        String
  timezone                    String   @default("Europe/London")
  cancellationWindowHours     Int      @default(2)
  rescheduleWindowHours       Int      @default(2)
  pendingConfirmationMins     Int      @default(15)
  slotIntervalMinutes         Int      @default(15)
  defaultBufferMinutes        Int      @default(0)
  createdAt                   DateTime @default(now())
  updatedAt                   DateTime @updatedAt
  clients                     Client[]
  timeBlocks                  TimeBlock[]
  products                    Product[]
  orders                      Order[]
}


model Client {
  id        String   @id @default(cuid())
  shopId    String
  fullName  String?
  email     String
  phone     String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  shop     ShopSettings @relation(fields: [shopId], references: [id], onDelete: Cascade)
  bookings Booking[]

  @@unique([shopId, email])
  @@index([shopId])
}

model Service {
  id              String   @id
  name            String
  durationMinutes Int
  bufferMinutes   Int      @default(0)
  fromPriceText   String?
  active          Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  bookings        Booking[]
}

model Barber {
  id         String             @id @default(cuid())
  name       String
  email      String?
  active     Boolean            @default(true)
  createdAt  DateTime           @default(now())
  updatedAt  DateTime           @updatedAt
  bookings   Booking[]
  rules      AvailabilityRule[]
  timeOff    BarberTimeOff[]
  timeBlocks TimeBlock[]
}

model AvailabilityRule {
  id            String   @id @default(cuid())
  barberId      String
  dayOfWeek     Int
  startMinutes  Int
  endMinutes    Int
  breakStartMin Int?
  breakEndMin   Int?
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  barber Barber @relation(fields: [barberId], references: [id], onDelete: Cascade)

  @@index([barberId, dayOfWeek])
}

model BarberTimeOff {
  id        String   @id @default(cuid())
  barberId  String
  startsAt  DateTime
  endsAt    DateTime
  reason    String?
  createdAt DateTime @default(now())

  barber Barber @relation(fields: [barberId], references: [id], onDelete: Cascade)

  @@index([barberId, startsAt, endsAt])
}

model TimeBlock {
  id        String   @id @default(cuid())
  shopId    String
  barberId  String?
  title     String
  startAt   DateTime
  endAt     DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  shop   ShopSettings @relation(fields: [shopId], references: [id], onDelete: Cascade)
  barber Barber?      @relation(fields: [barberId], references: [id], onDelete: Cascade)

  @@index([barberId, startAt])
  @@index([shopId, startAt])
}


model Booking {
  id                      String        @id @default(cuid())
  serviceId               String
  barberId                String
  fullName                String
  email                   String
  phone                   String?
  clientId                String?
  startAt                 DateTime
  endAt                   DateTime
  originalStartAt         DateTime?
  originalEndAt           DateTime?
  rescheduledAt           DateTime?
  status                  BookingStatus @default(PENDING_CONFIRMATION)
  notes                   String?
  parentBookingId         String?
  newBookingId            String?

  confirmTokenHash        String?
  confirmTokenExpiresAt   DateTime?
  manageTokenHash         String?
  manageTokenExpiresAt    DateTime?

  paymentRequired         Boolean       @default(false)
  depositAmountPence      Int?
  paymentStatus           PaymentStatus?
  stripeCheckoutSessionId String?
  paidAt                  DateTime?

  createdAt               DateTime      @default(now())
  updatedAt               DateTime      @updatedAt

  service Service @relation(fields: [serviceId], references: [id])
  barber  Barber  @relation(fields: [barberId], references: [id])
  client  Client? @relation(fields: [clientId], references: [id], onDelete: SetNull)

  @@index([barberId, startAt, endAt])
  @@index([status])
  @@index([email])
  @@index([clientId])
}


model Product {
  id          String   @id @default(cuid())
  shopId      String
  name        String
  description String?
  pricePence  Int
  imageUrl    String?
  active      Boolean  @default(true)
  featured    Boolean  @default(false)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  shop ShopSettings @relation(fields: [shopId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]

  @@index([shopId, active])
  @@index([shopId, sortOrder])
}
model Order {
  id              String      @id @default(cuid())
  shopId          String
  customerEmail   String
  status          OrderStatus @default(PAID)
  currency        String      @default("gbp")
  totalPence      Int
  stripeSessionId String?     @unique
  paidAt          DateTime?
  collectedAt     DateTime?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  shop  ShopSettings @relation(fields: [shopId], references: [id], onDelete: Cascade)
  items OrderItem[]

  @@index([shopId, createdAt])
  @@index([shopId, status])
}

model OrderItem {
  id                     String @id @default(cuid())
  orderId                String
  productId              String
  nameSnapshot           String
  unitPricePenceSnapshot Int
  quantity               Int
  lineTotalPence         Int

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)

  @@index([orderId])
  @@index([productId])
}



model RateLimitEvent {
  id        String   @id @default(cuid())
  ip        String
  action    String
  createdAt DateTime @default(now())

  @@index([ip, action, createdAt])
}
